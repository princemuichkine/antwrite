{
  "name": "antwrite",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "pnpm --filter @antwrite/app dev",
    "build": "pnpm --filter @antwrite/app build",
    "start": "pnpm --filter @antwrite/app start",
    "lint:app": "pnpm --filter @antwrite/app lint",
    "db:generate": "pnpm --filter @antwrite/db db:generate",
    "db:migrate": "pnpm --filter @antwrite/db db:migrate",
    "db:studio": "pnpm --filter @antwrite/db db:studio",
    "db:push": "pnpm --filter @antwrite/db db:push",
    "db:pull": "pnpm --filter @antwrite/db db:pull",
    "db:check": "pnpm --filter @antwrite/db db:check",
    "db:up": "pnpm --filter @antwrite/db db:up",
    "lint": "pnpm lint:app && biome lint --write --unsafe",
    "lint:fix": "pnpm --filter @antwrite/app lint --fix && biome lint --write --unsafe",
    "format": "biome format --write",
    "test": "export PLAYWRIGHT=True && pnpm exec playwright test --workers=4",
    "setup": "docker compose up -d && pnpm install && pnpm db:push",
    "reset": "docker compose down && docker compose up -d && pnpm db:push",
    "rebuild": "pnpm reset && pnpm build",
    "fresh-start": "docker compose down -v && docker compose up -d && pnpm install && pnpm db:push",
    "electron": "NODE_ENV=development electron electron/main.js",
    "electron:dev": "concurrently \"pnpm dev\" \"wait-on http://localhost:3000 && NODE_ENV=development electron electron/main.js\"",
    "electron:build": "pnpm build && electron-builder",
    "electron:build:mac": "pnpm build && electron-builder --mac",
    "electron:dist": "pnpm electron:build",
    "electron:dist:mac": "pnpm electron:build:mac"
  },
  "build": {
    "appId": "com.antwrite.app",
    "productName": "AntWrite",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      "apps/antwrite/out/**/*",
      "apps/antwrite/public/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "apps/antwrite/public/favicon.ico",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "electron/entitlements.mac.plist",
      "entitlementsInherit": "electron/entitlements.mac.plist"
    },
    "win": {
      "target": "nsis",
      "icon": "apps/antwrite/public/favicon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "apps/antwrite/public/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/typography": "^0.5.16",
    "@types/d3-scale": "^4.0.9",
    "@types/lodash": "^4.17.20",
    "@types/node": "^22.17.2",
    "@types/papaparse": "^5.3.16",
    "@types/pdf-parse": "^1.1.5",
    "@types/pg": "^8.15.5",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@types/react-syntax-highlighter": "^15.5.13",
    "concurrently": "^9.2.1",
    "dotenv": "^16.6.1",
    "dotenv-cli": "^8.0.0",
    "drizzle-kit": "^0.25.0",
    "drizzle-orm": "^0.34.1",
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12",
    "eslint": "^8.57.1",
    "eslint-config-next": "14.2.5",
    "eslint-config-prettier": "^9.1.2",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "next": "15.3.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "wait-on": "^8.0.4"
  },
  "packageManager": "pnpm@9.4.0",
  "pnpm": {
    "overrides": {
      "@ai-sdk/ui-utils": "^1.2.8",
      "@ai-sdk/provider": "^1.1.3",
      "react": "19.0.0-rc-45804af1-20241021"
    }
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.2.10"
  }
}
